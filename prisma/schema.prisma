generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Program {
  id          String   @id @default(uuid())
  title       String
  description String
  objectives  String   // JSON string of objectives
  photos      String   // JSON string of photo URLs
  metrics     String   // JSON string of impact metrics
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  translations ProgramTranslation[] @relation("ProgramTranslations")
}

model BlogPost {
  id           String                @id @default(uuid())
  title        String
  slug         String                @unique
  content      String
  excerpt      String?
  image        String?
  category     String
  tags         String?
  published    Boolean               @default(false)
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  history      PostHistory[]
  translations BlogPostTranslation[]
}

model GalleryImage {
  id        String   @id @default(uuid())
  url       String
  caption   String?
  category  String?
  createdAt DateTime @default(now())
}

model PageContent {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String   @default("text")
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  status    String   @default("NEW")
  createdAt DateTime @default(now())
}

model Partner {
  id        String   @id @default(uuid())
  name      String
  logo      String
  website   String?
  createdAt DateTime @default(now())
}

model TeamMember {
  id        String   @id @default(uuid())
  name      String
  title     String   // Changed from 'role' to 'title' for consistency
  bio       String?
  imageUrl  String?  // Changed from 'photo' to 'imageUrl'
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Statistic {
  id        String   @id @default(uuid())
  label     String   // e.g., "Lives Impacted"
  value     String   // e.g., "50,000+"
  icon      String   // Icon name (lucide-react)
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Resource {
  id          String   @id @default(uuid())
  title       String
  description String?
  fileUrl     String
  fileSize    String   // e.g., "2.4 MB"
  fileType    String   // e.g., "PDF"
  category    String?  // e.g., "Report", "Strategic Plan"
  downloads   Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(uuid())
  name      String
  role      String?
  message   String
  imageUrl  String?
  rating    Int?     // 1-5 stars
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteContent {
  id        String   @id @default(uuid())
  key       String   @unique // e.g., "hero_title", "mission_statement"
  value     String
  type      String   @default("TEXT") // TEXT, RICH_TEXT, IMAGE_URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ErrorLog {
  id        String   @id @default(uuid())
  message   String
  stack     String?
  path      String?
  userId    String?
  createdAt DateTime @default(now())
}

model PostHistory {
  id        String   @id @default(uuid())
  postId    String
  title     String
  content   String
  excerpt   String?
  image     String?
  category  String
  tags      String?
  editorId  String?
  createdAt DateTime @default(now())
  
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String   // CREATE, UPDATE, DELETE, LOGIN
  entity    String   // BlogPost, Program, User, etc.
  entityId  String?
  details   String?
  userId    String?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

// Multilingual Support Models
model Translation {
  id        String   @id @default(uuid())
  namespace String   @default("common")
  key       String   // e.g., "hero_title", "about_heading"
  locale    String   // e.g., "en", "fr"
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, locale, namespace])
  @@index([locale])
}

model BlogPostTranslation {
  id        String   @id @default(uuid())
  postId    String
  locale    String
  title     String
  content   String
  excerpt   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, locale])
  @@index([locale])
}

model ProgramTranslation {
  id          String   @id @default(uuid())
  programId   String
  locale      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  program     Program  @relation("ProgramTranslations", fields: [programId], references: [id], onDelete: Cascade)

  @@unique([programId, locale])
  @@index([locale])
}

// Advertisement Models
model Advertisement {
  id          String    @id @default(uuid())
  name        String    // Internal name
  type        String    // "BANNER", "NATIVE", "SIDEBAR"
  placement   String    // "HOME_TOP", "BLOG_SIDEBAR", etc.
  code        String    // Ad code (HTML/JS)
  active      Boolean   @default(true)
  priority    Int       @default(0)
  startDate   DateTime?
  endDate     DateTime?
  impressions Int       @default(0)
  clicks      Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([placement, active])
}

model DonationTier {
  id          String   @id @default(uuid())
  amount      Float
  description String
  isPopular   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DonationStat {
  id        String   @id @default(uuid())
  value     String
  label     String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donation {
  id              String   @id @default(uuid())
  amount          Float
  currency        String   @default("USD")
  donorName       String?
  donorEmail      String
  donorPhone      String?
  paymentMethod   String   // 'stripe', 'mpesa'
  paymentStatus   String   // 'pending', 'completed', 'failed', 'refunded'
  stripeSessionId String?  @unique
  mpesaCheckoutId String?  @unique
  mchangaCheckoutId String? @unique // Unique ID from M-Changa
  reference       String?   @unique // Generic reference for tracking
  mpesaReceiptNo  String?
  metadata        String?  // JSON for additional data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([paymentStatus])
  @@index([createdAt])
}

model Subscription {
  id                       String   @id @default(uuid())
  donorEmail               String
  donorName                String?
  donorPhone               String?
  amount                   Float
  currency                 String   @default("KES")
  frequency                String   // 'monthly', 'yearly'
  status                   String   // 'active', 'paused', 'cancelled'
  nextChargeDate           DateTime
  paystackPlanCode         String?
  paystackSubscriptionCode String?
  paystackCustomerCode     String?
  metadata                 String?  // JSON
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  
  @@index([status])
  @@index([nextChargeDate])
  @@index([donorEmail])
}
